<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FertilizerBenefitsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/normal_background_green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/normal_background_green"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="68dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/bunny">

            </ImageView>

            <TextView
                android:id="@+id/disease_detection"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/fertilizer_benefits"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="650dp"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:background="@color/white">
        <ImageView

            android:id="@+id/plant_without_fertilizer"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/rose_plant"/>

            <ImageView

                android:id="@+id/plant_with_fertilizer"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/rose_plant"/>
        </LinearLayout>

        <TextView
            android:id="@+id/Fertilizer_benefit_text"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="The planet with rabbit fertilizer ......"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    </LinearLayout>
